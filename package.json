{
  "name": "@dioxide-js/silas",
  "version": "0.1.16",
  "description": "RPC utility for Silas",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/esm/index.js",
  "typings": "./lib/types/index.d.ts",
  "keywords": [
    "dioxide",
    "web3",
    "blockchain",
    "silas"
  ],
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/commonjs/index.js"
    }
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "files": [
    "lib/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "concurrently --kill-others-on-fail \"yarn:build:*(!check) \"",
    "build:cjs": "tsc --build tsconfig.cjs.json && node ./cjspkg",
    "build:esm": "tsc --build tsconfig.esm.json && node ./esmpkg",
    "build:types": "tsc --build tsconfig.types.json",
    "build:check": "node -e \"require('./lib')\"",
    "lint": "eslint --cache --cache-strategy content --ext .ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "test": "jest --clearCache && jest --config ./test/unit/jest.config.js",
    "watch": "onchange \"src/**/*\" -e \"src/constants/version.ts\" -- yarn build",
    "ex:base": "node exmaple/base.js",
    "ex:tx": "node exmaple/tx.js"
  },
  "author": "dioxide",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/json-bigint": "^1.0.4",
    "@types/node-fetch": "^2.6.11",
    "@types/sha256": "^0.2.2",
    "@types/sm-crypto": "^0.3.4",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "concurrently": "^9.0.1",
    "eslint": "8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@dioxide-js/misc": "^0.3.2",
    "@noble/ed25519": "1.6.0",
    "base32-decode": "1.0.0",
    "base32-encode": "1",
    "base64-arraybuffer": "1.0.2",
    "base64-js": "^1.5.1",
    "crc-32": "1.2.2",
    "gm-crypto": "^0.1.12",
    "js-sha256": "0.10.1",
    "js-sha512": "0.8.0",
    "json-bigint": "^1.0.0",
    "node-fetch": "2",
    "query-string": "7.1.1",
    "sha256": "0.2.0",
    "sm-crypto": "^0.3.13"
  }
}
